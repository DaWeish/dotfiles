!---------- urxvt -------------------------------------------
! Ctrl+Alt+C copy  Ctrl+Alt+V paste
#include "./currentTerminalColors"

! Color depth options and set background color
!URxvt.depth:	32
!URxvt.background:	[88]#202020

Rxvt.secondaryScreen:	true
URxvt.secondaryScroll:	false
URxvt.skipScroll:	true
URxvt.scrollTtyKeypress: true

!clean up urxvt, add keybinds
URxvt.intensityStyles: true
URxvt.scrollBar: false
URxvt.iso14755: false
URxvt.iso14755_52: false

! font
URxvt*font: xft:Source\ Code\ Pro\ Medium:size=9:antialias=true:hinting=true,xft:Liberation Mono:antialias=true:hinting=true

! terminal padding
URxvt.internalBorder: 8

! uncomment for transparent terminal if you are ready to be made fun of in #rice
!URxvt.transparent:  true
!URxvt.shading:    15

! make otf / ttf fonts look pretty.  does not matter if you are using a bitmap font.
Xft.autohint: 0
Xft.lcdfilter:  lcddefault
Xft.hintstyle:  hintfull
Xft.hinting: 1
Xft.antialias: 1
Xft.rgba: rgb

! clickable links, clipboard support, mouse wheel support, and on the fly font resizing
! you will need to install the relevent perl extensions for these to work
!URxvt.perl-ext-common: default,matcher,clipboard,vtwheel,resize-font
!URxvt.url-launcher: /usr/bin/firefox
!URxvt.matcher.button: 1
!URxvt.matcher.rend.0: Uline Bold fg5
